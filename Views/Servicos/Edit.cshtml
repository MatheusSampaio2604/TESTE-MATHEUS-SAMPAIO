@model TESTE_MATHEUS_SAMPAIO.Context.DTO.ServicosViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>ServicosModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome_Servico" class="control-label"></label>
                <input asp-for="Nome_Servico" class="form-control" />
                <span asp-validation-for="Nome_Servico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_Servico" class="control-label"></label>
                <input asp-for="Descricao_Servico" class="form-control" />
                <span asp-validation-for="Descricao_Servico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prazo_Entrega" class="control-label"></label>
                <input asp-for="Prazo_Entrega" class="form-control" />
                <span asp-validation-for="Prazo_Entrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor" class="control-label"></label>
                <select asp-for="Fornecedor" class="form-control" asp-items="@(new SelectList(ViewBag.Fornecedor, "Id", "Nome"))">
                    
                </select>
                <span asp-validation-for="Fornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>