@model IEnumerable<TESTE_MATHEUS_SAMPAIO.Context.DTO.ProdutosViewModel>

@{
    ViewData["Title"] = "Atualizar Estoque";
}

<h1>Produtos</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque_Atual)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque_Atual)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="EditarEstoque" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
