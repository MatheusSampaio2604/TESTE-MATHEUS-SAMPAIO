@model IEnumerable<TESTE_MATHEUS_SAMPAIO.Context.DTO.DepartamentosViewModel>

@{
    string modelName = typeof(TESTE_MATHEUS_SAMPAIO.Context.DTO.DepartamentosViewModel).Name;
    modelName = modelName.Replace("ViewModel", "");
    ViewData["Title"] = modelName;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Novo</a>
</p>
<hr />

@if (Model.Count() != 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @await Html.PartialAsync("../Fragments/NothingData")
}