@model TESTE_MATHEUS_SAMPAIO.Context.DTO.UsuariosViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"] - @Model.Nome</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" readonly/>
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departamento" class="control-label"></label>
                <select asp-for="Departamento" class="form-select" asp-items="@(new SelectList(ViewBag.Departamentos, "Id", "Nome"))"></select>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label col-1" for="Ativo">@Html.DisplayNameFor(model => model.Ativo):</label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input col-4" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
